<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usercenter_userinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:paddingLeft="30dip"
        android:paddingRight="30dip" >

        <ImageView
            android:id="@+id/userinfo_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:maxHeight="100dip"
            android:maxWidth="100dip" />

        <TextView
            android:id="@+id/userinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/topictile_orange" />

        <TextView
            android:id="@+id/userinfo_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textColor="@color/text_title_color" />

        <TextView
            android:id="@+id/userinfo_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title_color" />

        <TextView
            android:id="@+id/userinfo_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title_color" />

        <TextView
            android:id="@+id/userinfo_regdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_title_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="@string/sign"
            android:textColor="@color/text_dark_yellow_name"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:minHeight="50dip" >

            <WebView
                android:id="@+id/userinfo_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/userinfo_shengwang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textColor="@color/text_dark_yellow_name"
            android:textSize="20sp" />
    </LinearLayout>

</ScrollView>