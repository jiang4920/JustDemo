<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/guide_head" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/plate_search"
            android:textColor="@color/text_title_color"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dip"
            android:src="@drawable/but_regist_back_selector" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="70dip"
            android:text="@string/plate_search_summary"
            android:textColor="@color/text_dark_yellow_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/search_key"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip" />

        <Button
            android:id="@+id/search_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_margin="20dip"
            android:background="@drawable/but_commit_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_dark_yellow_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:text="@string/plate_search_user_summary"
            android:textColor="@color/text_dark_yellow_name"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/search_key_user"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip" />

        <Button
            android:id="@+id/search_confirm_user"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_margin="20dip"
            android:background="@drawable/but_commit_selector" />
    </LinearLayout>

</RelativeLayout>