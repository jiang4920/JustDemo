<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/board_reply_count"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/shit1_2"
            android:gravity="center"
            android:textColor="#EE30A7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/board_title_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shit1_1"
            android:orientation="vertical"
            android:paddingLeft="10dp" 
            android:paddingRight="10dp" 
            android:paddingBottom="5dp" 
             >

            <TextView
                android:id="@+id/board_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:minHeight="20dp"
                android:paddingTop="5dp"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/board_topic_replytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/boardlist_replytime"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/board_topic_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxWidth="150dp"
                    android:textColor="@color/boardlist_poster"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/topiclist_item_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_select_style_1" />

</FrameLayout>