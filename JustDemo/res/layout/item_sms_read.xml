<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_sms_read"
    android:background="@drawable/msgbox_right"
    >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_sms_subject"
        android:layout_margin="5dip"
        android:layout_marginRight="15dip"
        android:textStyle="bold"
        android:textColor="@color/topictile_normal"
        />
    <TextView 
        android:layout_below="@id/item_sms_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_sms_content"
        android:layout_margin="5dip"
        android:layout_marginRight="15dip"
        android:textColor="@color/topictile_normal"
        />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/item_sms_read_auther"
	    android:layout_below="@id/item_sms_content"
	    android:layout_alignParentLeft="true"
	    android:textColor="@color/boardlist_poster"
	    android:layout_marginTop="5dip"
	    android:layout_marginLeft="5dip"
	    />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/item_sms_read_time"
	    android:layout_alignParentRight="true"
	    android:layout_below="@id/item_sms_content"
	    android:textColor="@color/boardlist_poster"
	    android:layout_marginTop="5dip"
	    android:layout_marginRight="5dip"
	    />
</RelativeLayout>