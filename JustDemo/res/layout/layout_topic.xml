<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/guide_head" >

        <TextView
            android:id="@+id/guide_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/text_title_color" />

        <Button
            android:id="@+id/topic_post"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_selector"
            android:text="@string/topic_post"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/topic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dip"
            android:src="@drawable/but_regist_back_selector" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/topic_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="50dip"
        android:background="@drawable/bg_tab"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/topic_new_topic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/topic_new_topic_selector"
            android:button="@color/transparent"
            android:checked="true" />

        <RadioButton
            android:id="@+id/topic_new_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/topic_new_reply_selector"
            android:button="@color/transparent" />

        <RadioButton
            android:id="@+id/topic_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/topic_header_selector"
            android:button="@color/transparent" />

        <RadioButton
            android:id="@+id/topic_recommand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/topic_recommand_selector"
            android:button="@color/transparent" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_tab" >

        <Button
            android:id="@+id/topic_arrow_left"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/topic_arrow_left_selector"
            android:text="@string/topic_page_pre"
            android:textColor="@color/text_color" >
        </Button>

        <Button
            android:id="@+id/topic_arrow_right"
            android:layout_width="70dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:background="@drawable/topic_arrow_right_selector"
            android:text="@string/topic_page_next"
            android:textColor="@color/text_color" >
        </Button>

        <TextView
            android:id="@+id/topic_page"
            android:layout_width="100dip"
            android:gravity="center"
            android:background="@drawable/main_board_bg1_select_style"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dip"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/topic_progress"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:id="@+id/topic_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dip"
            android:background="@color/transparent"
            android:cacheColorHint="#00000000"
            android:divider="@color/transparent"
            android:listSelector="@color/transparent" />
    </LinearLayout>

</RelativeLayout>