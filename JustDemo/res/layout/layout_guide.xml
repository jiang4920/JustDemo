<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
     >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/guide_head" >

        <TextView
            android:id="@+id/guide_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/namespace"
            android:textColor="@color/text_title_color" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginTop="50dip"
        android:id="@+id/guide_playbill"
        android:background="#88888888"
        >
    </RelativeLayout>
	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    android:layout_below="@id/guide_playbill"
	    android:src="@drawable/interval"
	    android:id="@+id/guide_interval"></ImageView>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/guide_interval"
	    android:layout_margin="20dip"
	    android:orientation="vertical"
	    >
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="85dip"
	        android:orientation="horizontal">
	        
	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_plate"
	            android:background="@drawable/plate_selector" />

	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_history"
	            android:background="@drawable/history_selector" />
		</LinearLayout>
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="85dip"
	        android:orientation="horizontal">
	        
	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_action"
	            android:background="@drawable/action_selector" />

	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_recommend"
	            android:background="@drawable/recommend_selector" />
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
	        android:layout_height="85dip"
	        android:orientation="horizontal">
	        
	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_settings"
	            android:background="@drawable/settings_selector" />

	        <ImageButton
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_margin="10dip"
	            android:layout_weight="1"
	            android:id="@+id/guide_user_center"
	            android:background="@drawable/user_center_selector" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
