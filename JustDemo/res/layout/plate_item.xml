<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView 
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/plate_item_icon"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_plate_default"
        />
    <TextView 
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plate_item_name"
        android:layout_toRightOf="@id/plate_item_icon"
        android:textColor="@color/text_dark_yellow_name"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plate_item_info"
        android:layout_toRightOf="@id/plate_item_icon"
        android:layout_below="@id/plate_item_name"
        android:textColor="@color/text_gray"
        android:textSize="10sp"
        />
</RelativeLayout>